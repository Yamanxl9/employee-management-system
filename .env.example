# Environment Variables للتطوير المحلي والإنتاج
# انسخ هذا الملف إلى .env وضع القيم الصحيحة

# رابط قاعدة بيانات MongoDB
# للتطوير المحلي: mongodb://localhost:27017/employees_db
# للإنتاج: mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/employees_db
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/employees_db

# مفتاح التشفير للجلسات والـ JWT tokens
# يجب أن يكون قوي ومعقد في الإنتاج
SECRET_KEY=your-super-secret-key-for-production

# بيئة التطبيق
FLASK_ENV=production

# المنفذ (اختياري، افتراضي 5000)
PORT=5000

# بيانات المستخدم الإداري الافتراضي
# اسم المستخدم: admin
# كلمة المرور: admin123
